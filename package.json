{
  "name": "madrun",
  "version": "1.1.0",
  "description": "CLI tool to run multiple npm-scripts in a madly comfortable way",
  "main": "lib/madrun.js",
  "scripts": {
    "lint": "bin/madrun.js lint:*",
    "fix:lint": "bin/madrun.js fix:lint",
    "test": "tape test/**/*.js",
    "watch:test": "bin/madrun.js watcher -- npm test",
    "watch:coverage": "bin/madrun.js watch:coverage:base",
    "watch:lint": "bin/madrun.js watcher -- bin/madrun.js lint:eslint*",
    "coverage": "bin/madrun.js coverage",
    "report": "bin/madrun.js report",
    "postpublish": "npm i -g"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/madrun.git"
  },
  "bin": {
    "madrun": "bin/madrun.js",
    "madrun-completion": "bin/madrun-completion.js"
  },
  "nyc": {
    "exclude": [
      ".*",
      "test"
    ]
  },
  "keywords": [
    "madrun",
    "scripts",
    "package",
    "npm",
    "npm run",
    "npm-scripts",
    "tool",
    "cli",
    "commond",
    "task",
    "parallel",
    "serial",
    "run",
    "tool",
    "commandline",
    "command"
  ],
  "author": "coderaiser <mnemonic.enemy@gmail.com> (http://coderaiser.github.io/)",
  "bugs": {
    "url": "https://github.com/coderaiser/madrun/issues"
  },
  "homepage": "https://github.com/coderaiser/madrun",
  "license": "MIT",
  "engine": ">=8",
  "dependencies": {
    "all-object-keys": "^1.0.0",
    "find-up": "^3.0.0",
    "jessy": "^2.0.0",
    "mapsome": "^1.0.0",
    "parent-dirs": "^1.0.0",
    "try-catch": "^2.0.0",
    "yargs-parser": "^12.0.0"
  },
  "devDependencies": {
    "@putout/eslint-config": "^1.1.0",
    "coveralls": "^3.0.0",
    "eslint": "^5.1.0",
    "eslint-plugin-node": "^8.0.0",
    "nodemon": "^1.9.1",
    "nyc": "^13.0.1",
    "putout": "^3.13.2",
    "supertape": "^1.2.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
